<mvc:View controllerName="lists.controller.App"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true">
      
      <Shell >
        <App >
           <pages>
              <Page id="page" 
                    title="{i18n>title}">
                <content >
                  <IconTabBar>
                    <items>
                       <IconTabFilter text="{i18n>objectList}">
                          <List items="{/Products}">
                             <items>
                               <ObjectListItem title="{Material} {Brand} {Model}"
                                               number="{Price}"
                                               numberUnit="{Currency}"
                                               type="Active">
                                    <attributes>
                                       <ObjectAttribute text="{Brand}"/>
                                       <ObjectAttribute text="{Weight}"/>
                                    </attributes>
                                </ObjectListItem>               
                             </items>
                          </List>
                       </IconTabFilter>
                       <IconTabFilter text="{i18n>standardList}">
                         <List items="{/Products}">
                            <items>
                               <StandardListItem title="{Material} {Brand} {Model}"
                                                description="{Weight}"
                                                info="{Price} {Currency}"
                                                type="Active"/>
                            </items>
                         </List>                     
                       </IconTabFilter>
                       <IconTabFilter text="{i18n>inputList}">
                          <List items="{/Products}">
                             <items>
                                <InputListItem label="{Brand}">
                                   <Select items="{Properties}">
                                      <core:Item key="{id}" text="{Text}"/>
                                   </Select>
                                </InputListItem>
                             </items>
                          </List>
                       </IconTabFilter>
                       <IconTabFilter text="{i18n>notificationList}">
                           <List items="{/News}">
                              <items>
                                 <NotificationListItem title="{Title}"
                                                        description="{Description}"
                                                        unread="{Unread}"
                                                        authorName="{Author}"
                                                        priority="{Priority}"
                                                        showCloseButton="{ShowCloseButton}"/>
                              </items>
                           </List>
                       </IconTabFilter>
                       <IconTabFilter text="{i18n>customList}">
                           <List items="{/News}">
                              <items>
                                 <CustomListItem >
                                   <layout:Grid >
                                      <Text text="{Title}"/>
                                      <Text text="{Author}"/>
                                      <Text text="{Description}"/>
                                   </layout:Grid>
                                 </CustomListItem>
                              </items>
                           </List>
                       </IconTabFilter>
                    </items>
                  </IconTabBar>  
                </content>
            </Page>
           </pages>
        </App>
      </Shell>

</mvc:View>
